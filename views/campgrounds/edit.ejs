    <% layout('layouts/boilerplate') %> 

<div class="container align-items-center d-flex justify-content-center mb-5">
      <div class="row">
            <div class="card shadow">
               <div class="card-body">
                  <h1 class="text-center">Edit <%=campground.title%></h1>
                     <div class="col-md-6 offset-md-3"></div>
                        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
               
                           <div class="mb-3">
                              <label class="form-label" for="title">Title</label><br>
                              <input class="form-control" type="text" name="campground[title]" id="title" placeholder="Enter camp title" value="<%=campground.title%>" required>
                           </div>
                  
                           <div class="mb-3">
                              <label class="form-label" for="location">Location</label><br>
                              <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Enter location" value="<%=campground.location%>" required>
                           </div>

                           <div class="mb-3">
                              <label class="form-label" for="price">Campground Price</label><br>
                              <div class="input-group">
                              <span class="input-group-text" id="price-label">NGN</span>
                              <input type="text" class="form-control" name="campground[price]" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" value="<%=campground.price%>" required>
                              </div>
                           </div>

                           <div class="mb-3">
                              <label class="form-label" for="description">Description</label><br>
                              <textarea class="form-control" type="text" name="campground[description]" id="image" placeholder="Enter description" required><%=campground.description%></textarea>
                           </div>

                           <div class="mb-3">
                              <label for="image" class="form-label">Add Image(s)</label>
                              <input class="form-control" name="image" type="file" id="image" multiple>
                           </div>

                           <div class="mb-3">
                           <% campground.images.forEach(function(image, i) { %> 
                              <img src="<%=image.thumbnail%>" alt="" class="img-thumbnail">
                              <div class="form-check-inline">
                                 <input type="checkbox" name="deleteImages[]" id="Image-<%=i%>" value="<%=image.filename%>">
                                 <label for="Image-<%=i%>">Delete?</label>
                              </div>
                           <% }) %>
                           </div>

                           <div class="mb-3">
                              <button class="btn btn-info w-100">Update Campground</button>
                           </div>   

                        </form>
                           <div class="mb-3">
                              <button class="btn btn-dark w-100"><a style="text-decoration: none; color: white;" href="/campgrounds/<%=campground._id %>">Cancel</a></button>   
                           </div>
                     </div>
               </div>
            </div>
      </div>
</div>